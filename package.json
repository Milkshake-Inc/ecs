{
	"name": "playground",
	"version": "1.0.0",
	"license": "BSD-3-Clause",
	"scripts": {
		"build:client": "webpack --config webpack.client.js",
		"build:server": "webpack --config webpack.server.js",
		"commit": "yarn lint && git-cz",
		"lint": "prettier --write src && eslint --fix src/**/*.ts",
		"start": "webpack --config webpack.dev.js --watch --info-verbosity none",
		"watch:client": "webpack --config webpack.client.js --watch",
		"watch:server": "webpack --config webpack.server.js --watch"
	},
	"config": {
		"commitizen": {
			"path": "cz-gitmoji"
		}
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxBracketSameLine": false,
		"jsxSingleQuote": true,
		"printWidth": 140,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true,
		"vueIndentScriptAndStyle": false
	},
	"dependencies": {
		"@geckos.io/client": "^1.3.0",
		"@geckos.io/server": "^1.3.0",
		"@msgpack/msgpack": "^1.12.0",
		"matter-js": "^0.14.2",
		"pixi.js": "^5.2.1",
		"poly-decomp": "^0.3.0",
		"sat": "^0.8.0",
		"typed-signals": "^1.0.5"
	},
	"devDependencies": {
		"@types/matter-js": "^0.14.2",
		"@types/sat": "^0.0.30",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"chalk": "^4.0.0",
		"commitizen": "^4.0.3",
		"copy-webpack-plugin": "^5.1.1",
		"cz-gitmoji": "^0.0.7",
		"eslint": "^6.8.0",
		"eslint-plugin-spellcheck": "^0.0.14",
		"html-webpack-plugin": "^4.0.4",
		"nodemon-webpack-plugin": "^4.3.1",
		"prettier": "^2.0.2",
		"ts-loader": "^6.2.2",
		"typescript": "^3.7.5",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3",
		"webpack-merge": "^4.2.2",
		"webpack-node-externals": "^1.7.2",
		"webpack-plugin-serve": "^0.12.1",
		"webpackbar": "^4.0.0"
	}
}
